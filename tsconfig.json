{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES5",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@": ["@"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example"],
}
